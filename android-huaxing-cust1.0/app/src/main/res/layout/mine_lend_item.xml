<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_10dp"
    android:background="@color/white">

    <View
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_default" />

    <TextView
        android:id="@+id/tv_lend_out_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="借款"/>

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1px"
        android:background="@color/line_d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">
        <TextView
            android:id="@+id/tv_lend_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black_aaaa"
            android:text="10.5%"/>
        <TextView
            android:id="@+id/tv_lend_rate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/black_aaaa"
            android:text="期限6个月"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/tv_lend_lend_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="88dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/orange_fe9a"
            android:text="还款中"/>

        <TextView
            android:id="@+id/tv_lend_lend_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="13sp"
            android:textColor="@color/blue_text"
            android:text="(加息券0.5%)"
            android:layout_alignBaseline="@+id/tv_lend_lend_money"
            android:layout_alignBottom="@+id/tv_lend_lend_money"
            android:layout_toRightOf="@+id/tv_lend_lend_money"
            android:layout_toEndOf="@+id/tv_lend_lend_money"
            android:layout_marginStart="11dp" />

        <TextView
            android:id="@+id/tv_lend_lend_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/black_aaaa"
            android:text="1,100,110,000元"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>