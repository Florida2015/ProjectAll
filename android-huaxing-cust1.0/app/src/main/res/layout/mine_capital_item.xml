<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_capital"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_mine_capital_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/black_3333"
        android:text="xx"/>

    <TextView
        android:id="@+id/tv_mine_capital_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mine_capital_type"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/black_aaaa"
        android:text="xx"/>
    <TextView
        android:id="@+id/tv_mine_capital_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/black_aaaa"
        android:text="xx"/>

</RelativeLayout>