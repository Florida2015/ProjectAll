<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平台审核"
        android:textColor="@color/black_text"
        android:textSize="@dimen/dimen_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ico_identity"
            android:gravity="center"
            android:text="身份认证"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/dimen_13sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ico_work"
            android:gravity="center"
            android:text="工作认证"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/dimen_13sp" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ico_income"
            android:gravity="center"
            android:text="收入认证"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/dimen_13sp" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ico_credit"
            android:gravity="center"
            android:text="信用报告"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/dimen_13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_d" />

    <TextView
        android:id="@+id/tv_des_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="还款方式：等额本息"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_des_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="起息标准：满标起息"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_des_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="起投金额：50,000元"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保障方式："
            android:textColor="@color/black_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_des_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险备用金计划"
            android:textColor="@color/blue_text"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>