<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1">

    <include layout="@layout/view_title"/>

    <RelativeLayout
        android:id="@+id/relative_version"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black_3333"
            android:textSize="@dimen/dimen_16sp"
            android:text="版本号"/>
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:textColor="@color/black_aaaa"
            android:textSize="@dimen/dimen_16sp"
            android:text="xx"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_d"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_updata_pass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black_3333"
            android:textSize="@dimen/dimen_16sp"
            android:text="修改密码"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@mipmap/aliwx_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_d"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_serivce_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black_3333"
            android:textSize="@dimen/dimen_16sp"
            android:text="客服电话"/>
        <TextView
            android:id="@+id/tv_service_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/dimen_16sp"
            android:text="xx"/>
    </RelativeLayout>

</LinearLayout>