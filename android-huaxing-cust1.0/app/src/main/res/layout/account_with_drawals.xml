<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_default">

    <include layout="@layout/view_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_32dp"
                android:paddingBottom="@dimen/dimen_32dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_account_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_16sp"
                        android:text="0.00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_aa_text"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="可用余额(元)"/>
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/dimen_38dp"
                    android:background="@color/black_aaaa"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_account_frozen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_16sp"
                        android:text="0.00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_aa_text"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="冻结资金(元)"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/ed_recharge_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:paddingBottom="@dimen/dimen_15dp"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black_3333"
                android:textColorHint="@color/black_aaaa"
                android:hint="请输入提现金额"/>

            <mehdi.sakout.fancybuttons.FancyButton
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btn_recharge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:padding="12dp"
                fancy:fb_borderColor="@color/white"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/blue_text"
                fancy:fb_radius="5dp"
                fancy:fb_text="提现"
                fancy:fb_textSize="16sp"
                fancy:fb_textColor="@color/white" >
            </mehdi.sakout.fancybuttons.FancyButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:singleLine="true"
                android:textColor="@color/black_3333"
                android:textSize="@dimen/dimen_12sp"
                android:text="备注:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:textColor="@color/black_aaaa"
                    android:textSize="@dimen/dimen_12sp"
                    android:text="1."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_aaaa"
                    android:textSize="@dimen/dimen_12sp"
                    android:text="提现不收取任何费用；"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textColor="@color/black_aaaa"
                    android:textSize="@dimen/dimen_12sp"
                    android:text="2."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textColor="@color/black_aaaa"
                    android:textSize="@dimen/dimen_12sp"
                    android:text="根据提现额度与时间不同，请在华兴银行操作页面选择不同的转账路由"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_quota_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black_aaaa"
                android:textSize="@dimen/dimen_12sp"
                android:text="实时：小于5万元【实时到账】\n小额：0-50万以内，两小时到账\n大额：金额任意，在工作日8:30-16:59时间内实时到账，其它时间不受理"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dimen_15dp"
               android:layout_marginTop="@dimen/dimen_5dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|left"
                   android:textColor="@color/black_aaaa"
                   android:textSize="@dimen/dimen_12sp"
                   android:text="3.提现"/>
               <TextView
                   android:id="@+id/tv_quota_type_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/blue_text"
                   android:textSize="@dimen/dimen_12sp"
                   android:text="图文引导"/>
           </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>