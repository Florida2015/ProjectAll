<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="35dp"
	android:layout_marginRight="35dp"
	android:padding="20dp"
	android:background="@drawable/dialog_background"
	android:orientation="vertical">
    

    <TextView 
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center_horizontal"
    	android:gravity="center"
    	android:textSize="20sp"
    	android:textColor="@color/blue_text"
    	android:text="发现新版本"/>
    
    <View 
        android:layout_width="match_parent"
    	android:layout_height="2px"
    	android:layout_marginTop="10dp"
    	android:background="@color/blue_text"/>
    <TextView 
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="25dp"
    	android:textSize="16sp"
    	android:textColor="#555555"
    	android:text="最新版本：1.0.3"/>
    
    <TextView 
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:visibility="gone"
    	android:layout_marginTop="8dp"
    	android:textSize="16sp"
    	android:textColor="#555555"
    	android:text="新版本大小：8.76MB"/>
    
    <TextView 
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:visibility="gone"
    	android:layout_marginTop="8dp"
    	android:textSize="16sp"
    	android:textColor="#555555"
    	android:text="时间"/>
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp"
    	android:textSize="16sp"
    	android:textColor="#555555"
    	android:text="更新内容："/>
    
    <TextView 
        android:id="@+id/tv_content_text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    	android:textSize="14sp"
    	android:textColor="#777777"
    	android:text="1.增加红包相关功能\n2.keyi\n3.keyi\n4.keyi"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:orientation="horizontal"
    	android:layout_marginTop="25dp">

		<mehdi.sakout.fancybuttons.FancyButton
			android:id="@+id/btn_fouse"
			style="@style/bespeak_submit_btn"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:visibility="gone"
			app:fb_borderColor="@color/white"
			app:fb_borderWidth="0dp"
			app:fb_defaultColor="@color/blue_15a5"
			app:fb_focusColor="@color/blue_1447"
			app:fb_radius="5dp"
			app:fb_text="立即更新"
			app:fb_textSize="14sp"
			app:fb_textColor="@color/white" >
		</mehdi.sakout.fancybuttons.FancyButton>

		<mehdi.sakout.fancybuttons.FancyButton
			android:id="@+id/btn_sure"
			style="@style/bespeak_submit_btn"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:padding="12dp"
			android:visibility="visible"
			app:fb_borderColor="@color/white"
			app:fb_borderWidth="1dp"
			app:fb_defaultColor="@color/blue_text"
			app:fb_radius="5dp"
			app:fb_text="立即更新"
			app:fb_textSize="14sp"
			app:fb_textColor="@color/white" >
		</mehdi.sakout.fancybuttons.FancyButton>

		<mehdi.sakout.fancybuttons.FancyButton
			android:id="@+id/btn_cancle"
			style="@style/bespeak_submit_btn"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/dimen_10dp"
			android:padding="12dp"
			android:visibility="visible"
			app:fb_borderColor="@color/grey_default"
			app:fb_borderWidth="1dp"
			app:fb_defaultColor="@color/white"
			app:fb_focusColor="@color/grey_default"
			app:fb_radius="5dp"
			app:fb_text="以后再说"
			app:fb_textSize="14sp"
			app:fb_textColor="@color/blue_text" >
		</mehdi.sakout.fancybuttons.FancyButton>
    </LinearLayout>
</LinearLayout>
