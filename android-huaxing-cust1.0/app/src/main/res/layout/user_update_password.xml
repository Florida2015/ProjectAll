<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1">

    <include layout="@layout/view_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@color/white">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@color/line_d"/>

        <EditText
            android:id="@+id/ed_set_old_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:inputType="textPassword"
            android:maxLength="36"
            android:ems="10"
            android:hint="请输入原始密码"
            android:paddingLeft="15dp"
            android:textColor="@color/black_3333"
            android:textColorHint="@color/black_aaaa"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/ed_set_new_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:inputType="textPassword"
            android:maxLength="36"
            android:ems="10"
            android:hint="请输入新密码"
            android:paddingLeft="15dp"
            android:textColor="@color/black_3333"
            android:textColorHint="@color/black_aaaa"
            android:textSize="16sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@color/line_d"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/ed_set_new_pass_again"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:inputType="textPassword"
            android:maxLength="36"
            android:ems="10"
            android:hint="请确认新密码"
            android:paddingLeft="15dp"
            android:textColor="@color/black_3333"
            android:textColorHint="@color/black_aaaa"
            android:textSize="16sp" />

    </RelativeLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_updata_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/blue_text"
        fancy:fb_radius="5dp"
        fancy:fb_text="立即修改"
        fancy:fb_textSize="16sp"
        fancy:fb_textColor="@color/white" />

</LinearLayout>