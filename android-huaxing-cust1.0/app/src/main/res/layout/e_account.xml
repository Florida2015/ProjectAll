<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_default">

    <include layout="@layout/view_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@mipmap/icon_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_12sp"
            android:text="资金安全保障再升级"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_14sp"
            android:text="华夏信财接入华兴银行资金存管"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@mipmap/icon_security"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:singleLine="true"
        android:textColor="@color/black_3333"
        android:textSize="@dimen/dimen_12sp"
        android:text="为了您的资金安全，请先开通存管账户"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/ed_e_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:inputType="textPersonName"
            android:hint="请输入真实姓名"
            android:paddingLeft="15dp"
            android:textColor="@color/black_3333"
            android:textColorHint="@color/black_aaaa"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@color/line_d"/>
        <EditText
            android:id="@+id/ed_e_card"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:inputType="number"
            android:hint="请输入身份证号"
            android:paddingLeft="15dp"
            android:textColor="@color/black_3333"
            android:textColorHint="@color/black_aaaa"
            android:textSize="16sp" />
    </LinearLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_open_e"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/blue_text"
        fancy:fb_radius="5dp"
        fancy:fb_text="立即开通"
        fancy:fb_textSize="16sp"
        fancy:fb_textColor="@color/white" >
    </mehdi.sakout.fancybuttons.FancyButton>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_marginBottom="@dimen/dimen_45dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:textColor="@color/black_aaaa"
            android:textSize="@dimen/dimen_12sp"
            android:text="银行工作时间:工作日8:30-17:30\n其余时间可能无法开通"/>
    </RelativeLayout>

</LinearLayout>