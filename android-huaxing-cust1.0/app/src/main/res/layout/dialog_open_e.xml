<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_58dp"
    android:background="@drawable/white_e_account">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_huaxing_bank"/>
        <ImageButton
            android:id="@+id/img_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:src="@mipmap/ico_close"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ico_immediately"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/black_3333"
        android:textSize="@dimen/dimen_14sp"
        android:text="为了您的资金安全\n请先开通华兴银行存管账户"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/black_aaaa"
        android:textSize="@dimen/dimen_11sp"
        android:text="银行工作时间：工作日8:30-17:30"/>

    <Button
        android:id="@+id/btn_mine_open_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp"
        android:text="立即开通"
        android:background="@drawable/blue_mine_open_e"/>

</LinearLayout>