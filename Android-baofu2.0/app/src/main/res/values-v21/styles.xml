<resources>
    <style name="Main.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:navigationBarColor">@color/black</item>-->
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/theme_color</item>
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <!--<item name="android:statusBarColor">@color/blue_login_background</item>-->
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>

    <style name="BaseBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:navigationBarColor">@color/black</item>-->
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/blue_1f80</item>
    </style>
</resources>
