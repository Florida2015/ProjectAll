<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1">

    <include layout="@layout/view_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="出账金额"/>
        <TextView
            android:id="@+id/tv_out_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange_8ffe9"
            android:textSize="14sp"
            android:text="0.00元"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="交易类型"/>
        <TextView
            android:id="@+id/tv_trade_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="x"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white_fafa">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="创建时间"/>
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="x-x-x"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_trade_namber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:visibility="visible"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="交易单号"/>
        <TextView
            android:id="@+id/tv_trade_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:gravity="right"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="x"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_trade_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:visibility="visible"
        android:background="@color/white_fafa">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="订单编号"/>
        <TextView
            android:id="@+id/tv_trade_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:gravity="right"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="x"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_trade_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="产品描述"/>
        <TextView
            android:id="@+id/tv_product_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="98dp"
            android:gravity="right"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="x"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_trade_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white_fafa">
        <TextView
            android:id="@+id/tv_pay_mode_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="交易账号"/>
        <TextView
            android:id="@+id/tv_pay_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="x"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_red_deductible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_deductible_money_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="红包抵扣"/>
        <TextView
            android:id="@+id/tv_deductible_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="0.00元"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_trade_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white_fafa">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="交易金额"/>
        <TextView
            android:id="@+id/tv_trade_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="0.00元"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_trade_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3333"
            android:textSize="14sp"
            android:text="备注"/>
        <TextView
            android:id="@+id/tv_trade_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_aaaa"
            android:textSize="14sp"
            android:text="出借"/>
    </RelativeLayout>
</LinearLayout>