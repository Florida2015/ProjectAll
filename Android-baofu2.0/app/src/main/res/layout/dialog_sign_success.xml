<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/white_sign">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="签到成功"
        android:textColor="@color/blue_1f80"
        android:textSize="16sp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/tip_sign_in_successfully"/>

    <TextView
        android:id="@+id/tv_get_integer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天签到获得10积分"
        android:textColor="@color/black_aaaa"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_get_extra_integer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="再连续签到3天，额外奖励50积分"
        android:textColor="@color/black_aaaa"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_get_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="好的"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/blue_sign"/>

</LinearLayout>