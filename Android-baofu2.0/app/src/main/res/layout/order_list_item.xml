<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_order"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_f1f1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textColor="@color/black000"
            android:text="华信宝"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_product_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_product_name"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_3333"
            android:text="2期"
            android:textSize="14sp"
           />
        <TextView
            android:id="@+id/tv_product_continue"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/tv_product_data"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/orange_8ffe9"
            android:text="续"
            android:textSize="13sp"
            android:visibility="gone"
            android:background="@drawable/stroke_orange"
            />

        <TextView
            android:id="@+id/tv_product_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_3333"
            android:text="2016-12-11"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:background="@color/grey_f1f1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_5dp">
        <TextView
            android:id="@+id/tv_product_rate"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black_aaaa"
            android:text="12.58%"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textColor="@color/black_aaaa"
            android:text="65"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_10dp">
        <TextView
            android:id="@+id/tv_product_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:textColor="@color/black_aaaa"
            android:text="1000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_product_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_product_money"
            android:textColor="@color/blue_79b5"
            android:text="xxx"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/orange_fbb0"
            android:text="收益"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_f1f1"/>
</LinearLayout>