<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1">

    <include layout="@layout/view_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_1dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_5dp">

        <EditText
            android:id="@+id/ed_search_financial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_search_financial"
            android:layout_centerVertical="true"
            android:background="@drawable/white_e_account"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:drawableLeft="@mipmap/ico_search"
            android:paddingLeft="@dimen/dimen_10dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:textColorHint="@color/black_aaaa"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:hint="搜索"
            />

        <Button
            android:id="@+id/btn_search_financial"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:textColor="@color/orange_fbb0"
            android:textSize="@dimen/dimen_16sp"
            android:text="搜索"
            android:background="@color/transparent"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_search_financial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/white"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:scrollbars="none"
        android:cacheColorHint="@color/white"/>

</LinearLayout>