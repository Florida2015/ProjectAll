<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_default"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="请输入"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:scrollHorizontally="false"
            android:textColor="#aaaaaa"
            android:textColorHint="#aaaaaa" />

        <com.hxxc.user.app.widget.MyClickButton
            android:id="@+id/do_step"
            style="@style/bespeak_submit_btn3"
            qun:itbackground="blue"
            qun:text="确定"
            qun:textColor="#ffffff"
            qun:textSize="16sp" />
    </LinearLayout>

</LinearLayout>