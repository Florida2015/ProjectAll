<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1">

    <include layout="@layout/view_title"/>

    <include layout="@layout/calender_item"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_f1f1"
        >
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_aaaa"
            android:text="1月"/>
        <TextView
            android:id="@+id/tv_sign_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_aaaa"
            android:text="金额(元)"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_principal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_return_principal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="待回款本金"/>
        <TextView
            android:id="@+id/tv_return_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="0.00"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_interest"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey_fafa"
        >
        <TextView
            android:id="@+id/tv_payment_interest_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="待回款利息"/>
        <TextView
            android:id="@+id/tv_payment_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="0.00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="已回款本金"/>
        <TextView
            android:id="@+id/tv_outstand_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="0.00"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        android:background="@color/grey_fafa"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="已回款利息"/>
        <TextView
            android:id="@+id/tv_interest_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_3333"
            android:text="0.00"/>
    </RelativeLayout>
</LinearLayout>