<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1">


    <include layout="@layout/view_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_15dp"
        android:background="@color/blue_1f80">

        <TextView
            android:id="@+id/tv_look_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:text="查看明细"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/tv_balance_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="1.8dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:text="6900\n账号余额"
            android:background="@mipmap/icon_circle"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_bank_choise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:background="@drawable/bg_white_to_gray">

        <ImageView
            android:id="@+id/img_icon_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@mipmap/icon_pay_bank"
            />
        <TextView
            android:id="@+id/tv_icon_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_icon_bank"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="1.8dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/black"
            android:text="工商银行"/>
        <TextView
            android:id="@+id/tv_bank_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_icon_bank"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_below="@+id/tv_icon_bank"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="1.8dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_aaaa"
            android:text="工商银行"/>
        <TextView
            android:id="@+id/tv_withdraw_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:drawableRight="@mipmap/ico_next"
            android:drawablePadding="@dimen/dimen_10dp"
            android:gravity="center"
            android:lineSpacingExtra="1.8dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black_aaaa"
            android:text="可提现：5000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_with_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="1.8dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black"
            android:text="提现金额"/>

        <EditText
            android:id="@+id/ed_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_with_text"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="48dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:gravity="center|left"
            android:textColorHint="@color/black_aaaa"
            android:textColor="@color/black_3333"
            android:textSize="@dimen/dimen_14sp"
            android:hint="请输入您要提现的金额"
            android:textCursorDrawable="@drawable/ed_cursor"
            android:background="@color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="1.8dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black"
            android:text="元"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ico_security_1"/>

        <TextView
            android:id="@+id/tv_waring_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left|top"
            android:lineSpacingMultiplier="1"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/black_aaaa"
            android:text="单笔提现50以上，提现免手续费。\n提现到账时间一般不超过3个工作日，节假日顺延。"/>

    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_apple_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/blue_15a4"
        fancy:fb_focusColor="@color/blue_0447"
        fancy:fb_radius="5dp"
        fancy:fb_text="确认申请"
        fancy:fb_textSize="16sp"
        fancy:fb_textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:lineSpacingExtra="1.8dp"
        android:lineSpacingMultiplier="1.5"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/blue_1f80"
        android:text="@string/text_waring"/>
</LinearLayout>