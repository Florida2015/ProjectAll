<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划周期"
        android:textColor="@color/black_text"
        android:drawableLeft="@drawable/ico_cycle"
        android:drawablePadding="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="开始加入"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/background_cycle_1"/>

        <View
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="1dp"
            android:background="@color/line_d"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="进入期限"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/background_cycle_2"/>

        <View
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="1dp"
            android:background="@color/line_d"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/black_text"
            android:text="1290天"
            android:id="@+id/tv_qixian" />

        <View
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="1dp"
            android:background="@color/line_d"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="到期退出"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/background_cycle_1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/black_aa_text"
            android:text=""/>

        <View
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/black_aa_text"
            android:text=""/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:gravity="center"
            android:textSize="@dimen/dimen_11sp"
            android:textColor="@color/black_aa_text"
            android:text=""/>


        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/black_aa_text"
            android:text=""/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_d" />

    <TextView
        android:id="@+id/tv_des_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="付息方式："
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保障方式："
            android:textColor="@color/black_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_des_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余时间："
            android:textColor="@color/black_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_des_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/orange_text"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>