<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <com.hxxc.user.app.widget.MultiSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_default"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_chat"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <RelativeLayout
                        android:id="@+id/rl_iv_1"
                        android:layout_width="75dp"
                        android:layout_height="65dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_45dp"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ico_your_advisor"/>

                        <TextView
                            android:id="@+id/unread_chat"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="5"
                            android:textSize="@dimen/dimen_11sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="3dp"
                            android:visibility="invisible"
                            android:background="@drawable/cycle"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_financer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/rl_iv_1"
                        android:text="您的顾问"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:layout_toRightOf="@+id/rl_iv_1"
                        android:text="暂无消息"
                        android:textColor="@color/gry_text"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_15dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gry_text"
                        android:textSize="11sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_d"
                    android:layout_marginLeft="@dimen/dimen_15dp"/>

                <RelativeLayout
                    android:id="@+id/rl_news"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <ImageView
                        android:id="@+id/imageview2"
                        android:layout_width="@dimen/dimen_45dp"
                        android:layout_height="@dimen/dimen_45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:src="@drawable/ico_new"
                        android:layout_marginRight="@dimen/dimen_15dp" />

                    <TextView
                        android:id="@+id/tv_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/imageview2"
                        android:text="新闻公告"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_15dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gry_text"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_content_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无内容"
                        android:textColor="@color/gry_text"
                        android:textSize="13sp"
                        android:layout_alignBottom="@+id/imageview2"
                        android:layout_toRightOf="@+id/imageview2"
                        android:layout_toEndOf="@+id/imageview2" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_d"
                    android:layout_marginLeft="@dimen/dimen_15dp"/>

                <RelativeLayout
                    android:id="@+id/rl_notices"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <RelativeLayout
                        android:id="@+id/rl_iv"
                        android:layout_width="75dp"
                        android:layout_height="65dp">

                        <ImageView
                            android:id="@+id/imageview3"
                            android:layout_width="@dimen/dimen_45dp"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ico_remind"/>
                        
                        <TextView
                            android:id="@+id/unread"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="1"
                            android:textSize="@dimen/dimen_11sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="3dp"
                            android:visibility="invisible"
                            android:background="@drawable/cycle"/>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/rl_iv"
                        android:text="通知提醒"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_content_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_toRightOf="@+id/rl_iv"
                        android:text="暂无内容"
                        android:textColor="@color/gry_text"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_15dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gry_text"
                        android:textSize="11sp" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </com.hxxc.user.app.widget.MultiSwipeRefreshLayout>
</LinearLayout>