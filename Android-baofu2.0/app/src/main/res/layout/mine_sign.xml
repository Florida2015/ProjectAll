<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/view_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/bg_sign_in_1">

        <TextView
            android:id="@+id/tv_sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/blue_1f80"
            android:text="积分"
            android:background="@mipmap/bg_dialog"/>
        <TextView
            android:id="@+id/tv_sign_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/white"
            android:text="今日已签到,已连续签到0天"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sign_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/black_aaaa"
        android:text="2016年10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_3dp"
        android:paddingBottom="@dimen/dimen_3dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/gray_sign">
        <TextView
            style="@style/style_sign"
            android:text="日"/>
        <TextView
            style="@style/style_sign"
            android:text="一"/>
        <TextView
            style="@style/style_sign"
            android:text="二"/>
        <TextView
            style="@style/style_sign"
            android:text="三"/>
        <TextView
            style="@style/style_sign"
            android:text="四"/>
        <TextView
            style="@style/style_sign"
            android:text="五"/>
        <TextView
            style="@style/style_sign"
            android:text="六"/>
    </LinearLayout>

    <GridView
        android:id="@+id/grid_view_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:numColumns="7"
        android:gravity="center"
        android:cacheColorHint="@color/white"
        android:columnWidth="@dimen/actionbar_size"/>

</LinearLayout>