<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_default"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="为了保障您的账户安全，请进行实名认证！"
        android:textColor="@color/grey_text"
        android:drawablePadding="@dimen/dimen_10dp"
        android:drawableLeft="@drawable/ico_security_1"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d" />

        <EditText
            android:id="@+id/id_edit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:hint="请输入身份证号码"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d" />
    </LinearLayout>

    <com.hxxc.user.app.widget.MyClickButton
        android:id="@+id/submit_btn"
        style="@style/bespeak_submit_btn3"
        qun:itbackground="blue"
        qun:text="立即认证"
        qun:textSize="@dimen/dimen_btn_18sp"
        qun:textColor="#ffffff" />

</LinearLayout>