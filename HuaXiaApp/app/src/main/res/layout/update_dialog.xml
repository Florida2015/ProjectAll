<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lingear_updat"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="30dp"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/umeng_update_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:background="@drawable/umeng_update_dialog_bg"
            android:orientation="vertical" >

            <!-- Content -->
            <TextView
                android:id="@+id/tv_update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/text_update"
                android:textSize="14sp"
                android:textColor="@color/black_3333"
                android:background="@color/transparent"
                />
            <!-- OK&Cancel Button -->
            <Button
                android:id="@+id/btn_update_fouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:background="@drawable/shape_orger_bottom"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/linear_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_update_waite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_update_waiting"
                    android:gravity="center"
                    android:padding="16sp"
                    android:text="稍后更新"
                    android:textSize="16sp"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_update_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_update"
                    android:gravity="center"
                    android:padding="16sp"
                    android:text="立即更新"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingRight="8dp"
            android:src="@drawable/icon_update"
            />
    </RelativeLayout>

</LinearLayout>