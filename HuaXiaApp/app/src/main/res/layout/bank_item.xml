<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_choise_bank"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="0dp"
    android:background="@color/black_f9f9">

    <TextView
        android:id="@+id/tv_approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/icon_biao"
        android:text="已认证"
        android:textSize="12sp"
        android:textColor="@color/black_9999"
        android:background="@color/transparent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/img_bank_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/bank_gongshang"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/tv_name_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_bank_icon"
            android:gravity="left|center_vertical"
            android:text="工商银行 "
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            />
        <TextView
            android:id="@+id/tv_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_bank"
            android:layout_toRightOf="@+id/img_bank_icon"
            android:layout_marginTop="1dp"
            android:gravity="left|center_vertical"
            android:text="单笔限额5万，单日5万"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/black_9999"
            android:background="@color/transparent"
            />
        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="visible"
            android:text="默认支付卡"
            android:textSize="12sp"
            android:textColor="@color/orange_ff92"
            android:background="@color/transparent"
            />

    </RelativeLayout>

</LinearLayout>