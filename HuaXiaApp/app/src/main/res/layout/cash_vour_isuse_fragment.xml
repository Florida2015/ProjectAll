<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.framwork.pullrefresh.ui.PullToRefreshListView
        android:id="@+id/pull_listview_cashvour_isuse"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:divider="@null"/>
    <TextView
        android:id="@+id/tv_empty_isuser_nolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="5dp"
        android:drawableTop="@drawable/icon_empty"
        android:drawablePadding="25dp"
        android:gravity="center"
        android:visibility="gone"
        android:singleLine="true"
        android:text="暂无已使用优惠券！"
        android:textSize="12sp"
        android:textColor="@color/black_6666"
        android:background="@color/transparent"
        />
    <!--<include layout="@layout/no_network"-->
        <!--/>-->
</RelativeLayout>