<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/tv_title_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="0dp"
        android:drawableLeft="@drawable/icon_biao"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:singleLine="true"
        android:visibility="visible"
        android:text="可用"
        android:textSize="12sp"
        android:textColor="@color/black_9999"
        android:background="@color/transparent"
        />

    <RelativeLayout
        android:id="@+id/linear_coupon"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/money_y_d">

        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="增加预期收益0.2%"
            android:textSize="14sp"
            android:textColor="@color/black_3333"
            android:background="@color/transparent"
            />
        <TextView
            android:id="@+id/tv_coupon_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_over_time"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="增加预期收益0.2%"
            android:textSize="11sp"
            android:textColor="@color/black_9999"
            android:background="@color/transparent"
            />
        <TextView
            android:id="@+id/tv_over_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_coupon_title"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="2016-6-5到期"
            android:textSize="10sp"
            android:textColor="@color/black_6666"
            android:background="@color/transparent"
            />
        <ImageView
            android:id="@+id/img_cash_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="28dp"
            android:visibility="gone"
            android:src="@drawable/tip_use"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/black_dcdc"/>
</LinearLayout>