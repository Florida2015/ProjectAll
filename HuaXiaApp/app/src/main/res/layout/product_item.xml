<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_title_item">

        <TextView
            android:id="@+id/tv_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@color/black_3333"
            android:text="新手专享 花宝 第xxxx期"
            android:background="@color/transparent"
            />
        <!--<ImageView-->
            <!--android:id="@+id/tv_img_tip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="28dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="1dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:background="@drawable/tip_moneybg"-->
            <!--android:singleLine="true"-->
            <!--android:gravity="center"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/white"-->
            <!--android:text="新手"-->
            <!--/>-->
        <TextView
            android:id="@+id/tv_img_tip"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/tip_relay"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="新手"
            />
        <!--android:background="@drawable/tip_others"-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_rate_item">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center|bottom"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="0dp"
                android:singleLine="true"
                android:textSize="38sp"
                android:textColor="@color/orange_ff92"
                android:text="12.0"
                android:background="@color/transparent"
                />
            <TextView
                android:id="@+id/tv_product_rate_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/orange_ff92"
                android:text="%"
                android:background="@color/transparent"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_probar_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="visible">
            <com.framwork.widget.RoundProgressBar
                android:id="@+id/probar_product"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android_custom:max="100"
                android_custom:progress="10"
                android_custom:roundColor="@color/black_ecec"
                android_custom:roundProgressColor="@color/orange_ff92"
                android_custom:textColor="@color/black_9999"
                android_custom:textIsDisplayable="true"
                android_custom:roundWidth="3dip"
                android_custom:textSize="10sp"
                />
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/linear_open_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_open_time_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:maxLength="3"
                    android:textSize="16sp"
                    android:textColor="@color/orange_ff92"
                    android:text="05"
                    android:background="@drawable/shape_gray_ec"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textColor="@color/orange_ff92"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/tv_open_time_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:maxLength="2"
                    android:textSize="16sp"
                    android:textColor="@color/orange_ff92"
                    android:text="22"
                    android:background="@drawable/shape_gray_ec"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textColor="@color/orange_ff92"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/tv_open_time_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:maxLength="2"
                    android:textSize="16sp"
                    android:textColor="@color/orange_ff92"
                    android:text="12"
                    android:background="@drawable/shape_gray_ec"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/orange_ff92"
                android:text="后开售"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_none_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"
            android:src="@drawable/tip_none"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/tv_min_money_sum_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingRight="5dp"
            android:paddingLeft="36dp"
            android:layout_weight="3"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:gravity="center|left"
            android:textSize="12sp"
            android:textColor="@color/black_9999"
            android:text="@string/text_product_min_money"
            />
    </LinearLayout>

</LinearLayout>