<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_ecec">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="48dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_ff92"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="88dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_edit"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:background="@color/transparent">

                    <TextView
                        android:id="@+id/tv_title_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:text="预计年化收益率"
                        android:background="@color/transparent"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:orientation="horizontal"
                        android:gravity="center|bottom">

                        <TextView
                            android:id="@+id/tv_product_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="42sp"
                            android:textColor="@color/white"
                            android:text="0.00"
                            android:background="@color/transparent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="2dp"
                            android:singleLine="true"
                            android:visibility="visible"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="%"
                            android:background="@color/transparent"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_close_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:text="封闭期"
                                android:background="@color/transparent"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center|bottom">

                                <TextView
                                    android:id="@+id/tv_product_sum_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:text="0"
                                    android:background="@color/transparent"
                                    />
                                <TextView
                                    android:id="@+id/tv_product_sum_time_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:text="天"
                                    android:background="@color/transparent"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:text="剩余金额"
                                android:background="@color/transparent"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center|bottom">

                                <TextView
                                    android:id="@+id/tv_remainingNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:text="@string/text_remain_money"
                                    android:background="@color/transparent"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:text="元"
                                    android:background="@color/transparent"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_bbin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:visibility="visible"
                            android:textColor="@color/white"
                            android:text="@string/text_test_money"
                            android:background="@color/transparent"
                            />
                        <LinearLayout
                            android:id="@+id/relative_award"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_text_bbin"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:text="活动"
                                android:background="@color/transparent"
                                />
                            <TextView
                                android:id="@+id/tv_text_activiy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:text="活动"
                                android:background="@color/transparent"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_product_detail_bg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="0dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:drawableRight="@drawable/icon_next"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/black_3333"
                    android:text="产品详情"
                    android:background="@color/white"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/black_e5e5"/>

                <TextView
                    android:id="@+id/tv_product_safe_bg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="0dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:drawableRight="@drawable/icon_next"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/black_3333"
                    android:text="安全保障"
                    android:background="@color/white"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black_dcdc"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/black_dcdc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical|center"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/black_9999"
                    android:text="预计收益"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/orange_ff92"
                    android:text="0.00元"
                    android:background="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_9999"
                    android:text="+"
                    android:visibility="gone"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_income_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center|right"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/orange_ff92"
                    android:text="0.00元"
                    android:background="@color/white"
                    />
                <ImageButton
                    android:id="@+id/img_btn_question_product"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:src="@drawable/icon_question"
                    android:background="@color/transparent"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="18dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:textColor="@color/black_6666"
                    android:text="金额"
                    android:background="@color/white"
                    />
                <EditText
                    android:id="@+id/ed_input_money"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@+id/tv_jine"
                    android:layout_toLeftOf="@+id/tv_yuan"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black_6666"
                    android:textColorHint="@color/black_9999"
                    android:hint="起投100"
                    android:maxLength="12"
                    android:background="@color/white"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ed_input_money"
                    android:layout_toRightOf="@+id/tv_jine"
                    android:layout_toLeftOf="@+id/tv_yuan"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black_e5e5"/>
                
                <TextView
                    android:id="@+id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="25dp"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/black_6666"
                    android:text="元"
                    android:background="@color/white"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black_dcdc"/>
            <Button
                android:id="@+id/btn_pay_begin"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/tv_login_forget_pass"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_login_shape"
                android:gravity="center"
                android:text="开始投资"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/text_warming_invest"
                style="@style/textWarmingInvest"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>