<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_ecec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange_ff92"/>

        <TextView
            android:id="@+id/tv_prodect_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="【新手专享】 【花宝】 第xxxx期"
            android:textSize="16sp"
            android:textColor="@color/black_3333"
            android:background="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center|bottom">
                <TextView
                    android:id="@+id/tv_prodect_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0.00"
                    android:textSize="26sp"
                    android:textColor="@color/orange_ff92"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="%"
                    android:textSize="14sp"
                    android:textColor="@color/orange_ff92"
                    android:background="@color/transparent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center|bottom">
                <TextView
                    android:id="@+id/tv_prodect_count_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0"
                    android:textSize="26sp"
                    android:textColor="@color/black_6666"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="天"
                    android:textSize="14sp"
                    android:textColor="@color/black_6666"
                    android:background="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="年化收益率"
                android:textSize="14sp"
                android:textColor="@color/black_6666"
                android:background="@color/transparent"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="封闭期限"
                android:textSize="14sp"
                android:textColor="@color/black_6666"
                android:background="@color/white"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/black_dcdc"/>
        <RelativeLayout
            android:id="@+id/relative_add_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="添加银行卡"
                    android:textSize="14sp"
                    android:textColor="@color/black_3333"
                    android:background="@color/transparent"
                    />

                <TextView
                    android:id="@+id/tv_bank_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_bank_name"
                    android:layout_toLeftOf="@+id/tv_bank_next"
                    android:layout_marginTop="2dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:text="限额"
                    android:textSize="12sp"
                    android:textColor="@color/black_6666"
                    android:background="@color/transparent"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bank_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/icon_product_next"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="点击添加"
                android:textSize="14sp"
                android:textColor="@color/black_6666"
                android:background="@color/transparent"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_dcdc"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/black_dcdc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_money_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="投资金额"
                    android:textSize="14sp"
                    android:textColor="@color/black_3333"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:id="@+id/tv_invest_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="元"
                    android:textSize="14sp"
                    android:textColor="@color/orange_ff92"
                    android:background="@color/transparent"
                    />
                <EditText
                    android:id="@+id/ed_input_money"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_money_bg"
                    android:layout_toLeftOf="@+id/tv_invest_money"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    android:paddingRight="5dp"
                    android:inputType="number"
                    android:paddingBottom="3dp"
                    android:gravity="right|bottom"
                    android:textSize="15sp"
                    android:textColor="@color/orange_ff92"
                    android:textColorHint="@color/orange_ff92"
                    android:text="000"
                    android:maxLength="12"
                    android:background="@color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:background="@color/black_eeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="预计收益:"
                    android:textSize="14sp"
                    android:textColor="@color/black_9999"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:id="@+id/tv_income_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="0.00元"
                    android:textSize="16sp"
                    android:textColor="@color/orange_ff92"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="+"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="@color/black_9999"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:id="@+id/tv_extra_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="0.00元"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="@color/orange_ff92"
                    android:background="@color/transparent"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_dcdc"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/black_dcdc"/>
        <RelativeLayout
            android:id="@+id/relative_add_coupon"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="使用优惠券"
                android:textSize="14sp"
                android:textColor="@color/black_3333"
                android:background="@color/transparent"
                />
            <TextView
                android:id="@+id/tv_add_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/icon_product_next"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="点击添加"
                android:textSize="14sp"
                android:textColor="@color/black_6666"
                android:background="@color/transparent"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/transparent">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我已阅读并同意"
                android:paddingLeft="5dp"
                android:checked="true"
                android:button="@drawable/check_register"
                android:textColor="@color/black_6666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_order_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="《出借咨询与服务协议》"
                android:textSize="12sp"
                android:textColor="@color/blue_2299"
                android:background="@color/transparent"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pay_order"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/tv_login_forget_pass"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_login_shape"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/text_warming_invest"
            style="@style/textWarmingInvest"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</ScrollView>