<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/img_btn_back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/title_back"
        android:background="@color/transparent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_logo"/>

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfor_login_bg"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="14dp"
        android:layout_toLeftOf="@+id/btn_forget_code"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:hint="手机号"
        android:maxLength="11"
        style="@style/login_edit"
        android:inputType="phone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ed_username"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/black_dcdc" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfor_login_bg"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_userpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfor_login_bg"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/icon_pass"
            android:drawablePadding="14dp"
            android:layout_toLeftOf="@+id/btn_forget_code"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:hint="登录密码"
            android:maxLength="20"
            style="@style/login_edit"
            android:inputType="textPassword" />
        <ImageButton
            android:id="@+id/img_btn_visiable"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_open_eye"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:textColor="@color/orangetogray"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ed_userpassword"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/black_dcdc" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_login_shape"
        android:gravity="center"
        android:text="登   录"
        android:textColor="@color/white"
        android:textSize="15sp"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textColor="@color/black_9999"
            android:text="忘记密码？"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/blue_2299f6"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <TextView
        style="@style/textWarmingInvest"
        android:layout_height="match_parent"
        android:background="@color/white"
        />
</LinearLayout>