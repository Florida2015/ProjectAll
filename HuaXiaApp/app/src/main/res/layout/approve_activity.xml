<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_ecec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/orange_fdf3">

        <TextView
            android:id="@+id/tv_prodect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ti_shi"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_approve"
            android:textSize="12sp"
            android:textColor="@color/orange_ff92"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/relative_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="真实姓名"
                android:textSize="14sp"
                android:textColor="@color/black_3333"
                />

            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfor_login_bg"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="68dp"
                android:hint="请输入姓名"
                android:maxLength="20"
                style="@style/login_edit"
                android:inputType="text" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line"/>

        <RelativeLayout
            android:id="@+id/relative_user_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="身份证号"
                android:textSize="14sp"
                android:textColor="@color/black_3333"
                />

            <EditText
                android:id="@+id/ed_usercard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfor_login_bg"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="68dp"
                android:hint="输入证件号"
                android:maxLength="20"
                style="@style/login_edit"
                android:digits="1234567890Xx"
                android:inputType="numberDecimal"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relative_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_choice_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="开户银行"
                android:textSize="14sp"
                android:textColor="@color/black_3333"
                />

            <TextView
                android:id="@+id/tv_choice_next"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/userinfor_login_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/icon_down"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="选择"
                android:textSize="14sp"
                android:textColor="@color/black_9999"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relatice_bank_bg"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <ImageView
                android:id="@+id/img_bank_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/bank_gongshang"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/tv_name_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/img_bank_icon"
                android:gravity="left|center_vertical"
                android:text="工商银行 "
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@color/transparent"
                />
            <TextView
                android:id="@+id/tv_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_bank"
                android:layout_toRightOf="@+id/img_bank_icon"
                android:layout_marginTop="1dp"
                android:gravity="left|center_vertical"
                android:text="单笔限额5万，单日5万"
                android:maxLines="2"
                android:textSize="12sp"
                android:textColor="@color/black_9999"
                android:background="@color/transparent"
                />
            <ImageView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_next"
                android:background="@color/transparent"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line"/>
        <RelativeLayout
            android:id="@+id/relative_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="银行卡号"
                android:textSize="14sp"
                android:textColor="@color/black_3333"
                />

            <EditText
                android:id="@+id/ed_userbank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfor_login_bg"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="68dp"
                android:hint="输入银行卡号"
                android:maxLength="20"
                style="@style/login_edit"
                android:inputType="number" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@drawable/line"/>
        <RelativeLayout
            android:id="@+id/relative_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="预留手机"
                android:textSize="16sp"
                android:textColor="@color/black_3333"
                />

            <EditText
                android:id="@+id/ed_userphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfor_login_bg"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="68dp"
                android:hint="输入手机号"
                android:maxLength="20"
                style="@style/login_edit"
                android:inputType="text" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_approve"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_login_shape"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/text_warming_invest"
        style="@style/textWarmingInvest"
        android:layout_height="wrap_content"
        />
</LinearLayout>