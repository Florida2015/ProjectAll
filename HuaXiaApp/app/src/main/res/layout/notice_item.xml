<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:gravity="bottom">
        <TextView
            android:id="@+id/tv_notice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_notice"
            android:drawablePadding="5dp"
            android:textColor="@color/black_3333"
            android:ellipsize="end"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:singleLine="true"
            android:text="通知"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_notice_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black_9999"
        android:ellipsize="end"
        android:background="@color/white"
        android:textSize="13sp"
        android:maxLines="2"
        android:text="通知"/>
    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black_9999"
        android:background="@color/transparent"
        android:textSize="10sp"
        android:singleLine="true"
        android:text="2016-12-28"/>
</LinearLayout>