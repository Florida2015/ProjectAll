<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_order_item">

        <LinearLayout
            android:id="@+id/linear_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="花虾宝 融宝 90天"
                android:gravity="left"
                android:textColor="@color/black_5555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_product_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:paddingRight="5dp"
                android:gravity="left"
                android:text="2015-09-02 12:11"
                android:textColor="@color/black_9999"
                android:textSize="10sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear_name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/line_dash"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_product_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_order_again"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:lineSpacingExtra="5dp"
                android:text="投资金额:2000元"
                android:textColor="@color/black_9999"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_income_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_product_money"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                android:paddingRight="0dp"
                android:lineSpacingExtra="5dp"
                android:maxLines="1"
                android:text="原因："
                android:textColor="@color/black_9999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fail_why"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_money"
                android:layout_toRightOf="@+id/tv_income_time"
                android:layout_toLeftOf="@+id/btn_order_again"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:lineSpacingExtra="5dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/red_fc81"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_order_again"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="重新下单"
                android:background="@drawable/btn_order_again"
                android:textColor="@color/orange_ff92"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>